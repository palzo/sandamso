<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignPage.SignUpActivity"
    android:background="@drawable/iv_background_down">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/signup_title"
                style="@style/PointText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="30dp"
                android:text="Join Hike!!"
                android:textColor="@color/white"
                android:textSize="40sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="650dp"
                android:background="@drawable/signup_roundbox"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/signup_tv_email"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="80dp"
                    android:text="이메일"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:id="@+id/signup_et_email"
                    style="@style/HintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/signup_et_border"
                    android:ems="10"
                    android:hint="이메일을 입력하세요."
                    android:inputType="textEmailAddress"
                    android:paddingHorizontal="15dp"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/signup_tv_email"
                    app:layout_constraintTop_toBottomOf="@+id/signup_tv_email" />

                <TextView
                    android:id="@+id/tv_signupnick"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="닉네임"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_tv_email"
                    app:layout_constraintTop_toBottomOf="@+id/signup_et_email" />

                <EditText
                    android:id="@+id/signup_et_nickname"
                    style="@style/HintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/signup_et_border"
                    android:ems="10"
                    android:hint="닉네임을 입력해주세요."
                    android:inputType="text"
                    android:paddingHorizontal="15dp"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_signupnick"
                    app:layout_constraintTop_toBottomOf="@+id/tv_signupnick" />

                <TextView
                    android:id="@+id/tv_signupname"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="이름"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_tv_email"
                    app:layout_constraintTop_toBottomOf="@+id/signup_et_nickname" />

                <EditText
                    android:id="@+id/signup_et_name"
                    style="@style/HintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/signup_et_border"
                    android:ems="10"
                    android:hint="이름을 입력해주세요."
                    android:inputType="textPersonName"
                    android:paddingHorizontal="15dp"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_signupname"
                    app:layout_constraintTop_toBottomOf="@+id/tv_signupname" />

                <TextView
                    android:id="@+id/tv_signuppw"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="비밀번호"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_tv_email"
                    app:layout_constraintTop_toBottomOf="@+id/signup_et_name" />

                <EditText
                    android:id="@+id/signup_et_pw"
                    style="@style/HintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/signup_et_border"
                    android:ems="10"
                    android:hint="비밀번호를 입력해주세요."
                    android:inputType="textPassword"
                    android:paddingHorizontal="15dp"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_signuppw"
                    app:layout_constraintTop_toBottomOf="@+id/tv_signuppw" />

                <TextView
                    android:id="@+id/tv_signupcheck"
                    style="@style/RegularText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="비밀번호 확인"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@+id/signup_tv_email"
                    app:layout_constraintTop_toBottomOf="@+id/signup_et_pw" />

                <EditText
                    android:id="@+id/signup_et_checkpw"
                    style="@style/HintText"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/signup_et_border"
                    android:ems="10"
                    android:hint="비밀번호를 다시 입력해주세요."
                    android:inputType="textPassword"
                    android:paddingHorizontal="15dp"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_signupcheck"
                    app:layout_constraintTop_toBottomOf="@+id/tv_signupcheck" />

                <Button
                    android:id="@+id/btn_signupaccept"
                    style="@style/BtnText"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/btn_desert_borderless"
                    android:text="확인"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="@+id/signup_et_checkpw"
                    app:layout_constraintTop_toBottomOf="@+id/signup_et_checkpw" />

                <Button
                    android:id="@+id/btn_signupcancel"
                    style="@style/BtnText"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn_desert_border"
                    android:text="취소"
                    android:textColor="@color/desert"
                    app:layout_constraintEnd_toEndOf="@+id/signup_et_checkpw"
                    app:layout_constraintStart_toEndOf="@+id/btn_signupaccept"
                    app:layout_constraintTop_toTopOf="@+id/btn_signupaccept" />

                <Button
                    android:id="@+id/signup_btn_checknick"
                    style="@style/RegularText"
                    android:layout_width="85dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="50dp"
                    android:background="@drawable/signup_btn_border"
                    android:text="중복확인"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@+id/signup_et_nickname"
                    app:layout_constraintEnd_toEndOf="@+id/signup_et_nickname"
                    app:layout_constraintTop_toTopOf="@+id/signup_et_nickname" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>