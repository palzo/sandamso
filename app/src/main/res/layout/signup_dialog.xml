<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="370dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/signup_dialog_tv_title"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안 내 사 항"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/signup_dialog_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:background="@color/grey_400"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_dialog_tv_title" />

    <TextView
        android:id="@+id/signup_dialog_tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:layout_marginHorizontal="20dp"
        style="@style/Title"
        android:text="입력하신 이메일 주소로 \n인증 메일이 발송되었습니다."
        android:lineSpacingExtra="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_dialog_view" />

    <TextView
        android:id="@+id/signup_dialog_tv_warning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginHorizontal="20dp"
        android:gravity="center"
        style="@style/Title"
        android:text="받은 메일이 없을 경우, \n스팸 메일함 확인"
        android:textColor="@color/red_500"
        android:lineSpacingExtra="10sp"
        app:layout_constraintEnd_toEndOf="@+id/signup_dialog_tv_text"
        app:layout_constraintStart_toStartOf="@+id/signup_dialog_tv_text"
        app:layout_constraintTop_toBottomOf="@+id/signup_dialog_tv_text" />

    <Button
        android:id="@+id/signup_dialog_btn"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="24dp"
        android:layout_marginHorizontal="20dp"
        android:text="로그인하러 가기"
        style="@style/Title"
        android:textColor="@color/white"
        android:background="@drawable/btn_desert_borderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup_dialog_tv_warning" />
</androidx.constraintlayout.widget.ConstraintLayout>