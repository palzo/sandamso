<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="8dp"
    app:layout_goneMarginEnd="5dp">

    <TextView
        android:id="@+id/weather_item_tv_hour"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="11시"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/weather_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:src="@drawable/ic_cloud"
        app:layout_constraintEnd_toEndOf="@+id/weather_item_tv_hour"
        app:layout_constraintStart_toStartOf="@+id/weather_item_tv_hour"
        app:layout_constraintTop_toBottomOf="@+id/weather_item_tv_hour" />

    <TextView
        android:id="@+id/weather_item_tv_temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:fontFamily="@font/pretendard_light"
        android:text="22ºC"
        app:layout_constraintEnd_toEndOf="@+id/weather_item_iv"
        app:layout_constraintStart_toStartOf="@+id/weather_item_iv"
        app:layout_constraintTop_toBottomOf="@+id/weather_item_iv" />


</androidx.constraintlayout.widget.ConstraintLayout>