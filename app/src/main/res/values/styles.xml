<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PageTitle">
        <item name="android:fontFamily">@font/pretendard_black</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">@color/grey_700</item>
    </style>

    <style name="Title">
        <item name="android:fontFamily">@font/pretendard_bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="RegularText">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="HintText">
        <item name="android:fontFamily">@font/pretendard_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="hintTextColor">#D2D2D2</item>
    </style>

    <style name="SmallText">
        <item name="android:fontFamily">@font/pretendard_light</item>
        <item name="android:textSize">8dp</item>
    </style>

    <style name="PointText">
        <item name="android:fontFamily">@font/lemon_regular</item>
    </style>

    <style name="BtnText">
        <item name="android:fontFamily">@font/pretendard_extra_bold</item>
        <item name="android:textSize">18dp</item>
    </style>
</resources>